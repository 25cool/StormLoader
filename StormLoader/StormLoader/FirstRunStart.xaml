<UserControl x:Class="StormLoader.FirstRun"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:StormLoader"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <materialDesign:Card Height="200" HorizontalAlignment="Stretch" Width="auto" Margin="5" UniformCornerRadius="10">
        <DockPanel Margin="20">
            <Label Content="Hi! Welcome to StormLoader" FontSize="25" DockPanel.Dock="Top"/>
            <Label Content="Before we get started, I need some information from you, Click 'Next' to continue" FontSize="16" DockPanel.Dock="Top"/>
            <Button DockPanel.Dock="Bottom" Width="100" Content="Next" Foreground="White" Background="#1E88E5" BorderThickness="0" VerticalAlignment="Bottom" HorizontalAlignment="Right" materialDesign:ButtonAssist.CornerRadius="5"/>
        </DockPanel>
    </materialDesign:Card>
</UserControl>
